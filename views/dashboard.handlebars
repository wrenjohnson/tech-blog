 <section class="hero is-info is-small is-bold">
        <div class="hero-body">
            <div class="container has-text-centered">
                <h1 class="title">Dashboard</h1>
            </div>
        </div>
    </section>

    <div class="has-text-centered is-half">
        <button class="button is-primary mt-5 is-half js-modal-trigger" data-target="add-post-modal">Add New Post</button>
    </div>

    <div class="container">
        <!-- START ARTICLE FEED -->
        <section class="articles">
            <div class="column is-8 is-offset-2">
              
              
               
                <!-- START ARTICLE -->
                {{#each userPosts as |post| }}
                <div class="card article">
                    <div class="card-content">
                        <div>
                           <h3><a href="./dashboard/{{post.id}}">{{post.title}}</a></h3> 
                           <div class="has-text-right">
                            <h4 class="has-text-weight-semibold">Posted on {{formDate post.createdAt}}</h4>
                           </div>
                        </div>
                        <div>
                            <p>{{post.contents}}</p>
                        </div>
                        <div class="update-delete-div has-text-right">
                                
                            </div>
                    </div>
                </div>
                {{/each}}
                <!-- END ARTICLE -->
              </div>

        </section>
        <!-- END ARTICLE FEED -->
    </div>

    {{!-- Add post modal --}}
    <div id="add-post-modal" class="modal">
    <div class="modal-background"></div>

    <div class="modal-content">
    <div class="box">
    
      <!-- Add content -->
      <input class="input is-info" type="text" placeholder="Title" id="modal-title-input">
      <textarea class="textarea is-info mt-5" placeholder="Content:" id="modal-content-textarea"></textarea>
      <div class="has-text-right">
        <button class="button is-primary mt-5" id="add-post">Add Post</button>
      </div>
    </div>
  </div>   



   

